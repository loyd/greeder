<!DOCTYPE html>
<meta charset="utf-8" />
<head>
	<link rel="stylesheet" href="/css/style.css">
	<script src="/js/http.js"></script>
	<script src="/js/templater.js"></script>
	<script src="/js/index.js"></script>
</head>
<title>Greeder</title>

<div class="layout">
	<div class="flex-row">
		<div class="menu">
			<div class="flex-column">
				<span class="caption">Hello, {{uid}}</span>
				<span class="vertical-indent"></span>
				<a href="/management">Управление лентами</a>
			</div>
		</div>
		<div class="content">
			<h3>Список лент</h3>
			<div id="feed-list"></div>
		</div>
	</div>
</div>

<template id="feed-template">
	<div class="flex-column feed-item">
		<div class="caption"><a href="/feed/((id))">((title))</a></div>
		<div class="text-muted">((description))</div>
	</div>
</template>
